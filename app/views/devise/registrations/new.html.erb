<div class="row">
  <div class="col-md-4 offset-md-4 text-center">

    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.text_field :fullname, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "full name" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "email" %>
      </div>

      <div class="form-group">
        <br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "make a password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
